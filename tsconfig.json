{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "lib": [
      "es6",
      "esnext"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "test/**/*.spec.ts"
  ]
}